---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "Portfolio v2 | Digital Twin" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen font-sans text-text-primary antialiased selection:bg-primary/30 selection:text-white pb-10">
    
    {/* Floating Navigation */}
    <nav class="fixed top-6 left-1/2 z-50 -translate-x-1/2">
      <div class="flex items-center gap-1 rounded-full border border-white/10 bg-white/5 p-1.5 px-3 backdrop-blur-xl shadow-2xl">
        <a href="/" class="rounded-full bg-white/10 px-4 py-1.5 text-xs font-medium text-white transition-colors hover:bg-white/20">
          SYSTEM
        </a>
        <a href="#projects" class="rounded-full px-4 py-1.5 text-xs font-medium text-text-muted hover:text-white transition-colors">
          MODULES
        </a>
        <a href="#about" class="rounded-full px-4 py-1.5 text-xs font-medium text-text-muted hover:text-white transition-colors">
          LOGS
        </a>
      </div>
    </nav>

    {/* Main Content Area */}
    <main class="relative z-10 min-h-screen w-full overflow-x-hidden">
      <slot />
    </main>

    {/* Fixed Status Bar Footer */}
    <footer class="fixed bottom-0 left-0 right-0 z-50 flex h-8 items-center justify-between border-t border-white/10 bg-[#0f1117]/80 px-4 text-[10px] font-mono text-text-muted backdrop-blur-sm">
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-1.5">
          <span class="h-2 w-2 rounded-full bg-primary/50"></span>
          <span>main</span>
        </div>
        <div class="flex items-center gap-1.5">
          <span>⊗ 0</span>
          <span>⚠ 0</span>
        </div>
      </div>
      <div class="flex items-center gap-4">
        <span class="hidden sm:inline">Ln 1, Col 1</span>
        <span>UTF-8</span>
        <div class="flex items-center gap-2" title="Live Connection">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
            </span>
        </div>
      </div>
    </footer>

    {/* Ambient Background Glows */}
    <div class="fixed inset-0 pointer-events-none z-0">
        <div class="absolute top-1/4 left-1/4 h-96 w-96 rounded-full bg-primary/10 blur-[100px]"></div>
        <div class="absolute bottom-1/4 right-1/4 h-96 w-96 rounded-full bg-success/5 blur-[100px]"></div>
    </div>
    
    <style is:global>
      .scanline-text {
        position: relative;
        overflow: hidden;
      }
      .scanline-text::after {
        content: "";
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
          to bottom,
          transparent 0px,
          transparent 2px,
          rgba(255, 255, 255, 0.05) 3px
        );
        pointer-events: none;
        mix-blend-mode: overlay;
      }
    </style>
  </body>
</html>
